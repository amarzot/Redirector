{
    "manifest_version": 2,
    "name": "Redirector",
    "version": "1.0",

    "description": "Redirect web requests using custom rules",
    "homepage_url": "https://github.com/amarzot/Redirector",

    "permissions": ["storage", "webRequest", "webRequestBlocking", "<all_urls>"],

    "background": {
        "scripts": ["background.js"]
    },
    "browser_action": {
        "default_icon":  "icon.svg",
        "default_title": "Redirector"
    },
    "options_ui": {
        "page": "options.html",
        "open_in_tab": true
    },
    "browser_specific_settings": {
        "gecko": {
            "id": "{be1ff250-6856-455b-b810-c5076a7c0203}"
        }
    }

}

