{
    "manifest_version": 3,
    "name": "Redirector",
    "version": "1.0",

    "description": "Manage redirection rules for websites",

    "permissions": ["storage", "webRequest", "webRequestBlocking"],
    "host_permissions": ["<all_urls>"],

    "background": {
        "scripts": ["background.js"]
    },
    "action": {
        "default_icon":  "icon.svg",
        "default_title": "Redirector"
    },
    "options_ui": {
        "page": "options.html",
        "open_in_tab": true
    },
    "browser_specific_settings": {
        "gecko": {
            "id": "{be1ff250-6856-455b-b810-c5076a7c0203}"
        }
    }

}

