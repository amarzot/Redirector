{
    "manifest_version": 2,
    "name": "Redirector",
    "version": "1.0",

    "description": "Manage redirection rules for websites",

    "permissions": ["storage", "webRequest", "webRequestBlocking", "<all_urls>"],

    "background": {
        "scripts": ["background.js"]
    },
    "browser_action": {
        "default_title": "Redirector",
        "default_popup": "action.html"
    },
    "options_ui": {
        "page": "options.html",
        "open_in_tab": true
    },
    "browser_specific_settings": {
        "gecko": {
            "id": "addon@example.com"
        }
    }

}

